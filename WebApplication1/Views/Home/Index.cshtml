@model IEnumerable<WebApplication1.Models.ItemsTable>

@{
    ViewBag.Title = "Bienvenu.";
}

<style>

    table {
        border: hidden;
    }

    .item {
        border-radius: 5px;
    }

</style>

<!-- C'est moi qui ajouter sa, c'est utile pour les boutons submits-->
@using (Html.BeginForm())
{
    <div class="jumbotron">
    @if (Model.Count() > 0 && Model.ElementAt(0) != null)
    {
        <table>
            <tr>
                @for (int i = 0; i < 4 && i < Model.Count(); i++)
                {
                    <td ><input class="image" type="submit" name="BTN_Submit" value="@Model.ElementAt(i).ID" style="background: url(/Images/@Html.DisplayFor(modelItem => Model.ElementAt(i).PicturePath)) no-repeat; width: 150px; height: 150px; background-size: 100% 100%; text-indent: 100%; white-space: nowrap; overflow: hidden;" /></td>          
                }
            </tr>
            <tr>
                @for (int i = 4; i < 8 && i < Model.Count(); i++)
                {
                    <td ><input class="image" type="submit" name="BTN_Submit" value="@Model.ElementAt(i).ID" style="background: url(/Images/@Html.DisplayFor(modelItem => Model.ElementAt(i).PicturePath)) no-repeat; width: 150px; height: 150px; background-size: 100% 100%; text-indent: 100%; white-space: nowrap; overflow: hidden;" /></td>
                }
            </tr>
        </table>
    }
    </div>
}